{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch and Debug Standalone Blazor WebAssembly App",
      "type": "blazorwasm",
      "request": "launch",
      "cwd": "${workspaceFolder}/src/Phalanx.App",
      "url": "https://localhost:7098"
    },
    {
      "name": ".NET Core Launch (console)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/${input:project}/bin/Debug/net7.0/${input:project}.dll",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "internalConsole"
    }
  ],
  "inputs": [
    {
      "id": "project",
      "type": "pickString",
      "description": "Project",
      "default": "Phalanx.PlaygroundTool",
      "options": [
        "Phalanx.PlaygroundTool"
      ]
    }
  ]
}