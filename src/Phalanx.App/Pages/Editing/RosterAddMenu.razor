                {
                }
            }
        }


        foreach (string key in RosterAddItems2.Keys)
        {
            if (RosterAddItems2[key].Count < 1)
                continue;

            // TODO determine if other arrays need traversal besides SSE
            // Get the Selection this entrylink points to, then add it to the Roster
            for (int i = 0; i < RosterAddItems2[key].Count; i++)
            {
                if (Editor?.State is { Roster: { } roster } state){
                    Editor?.ApplyOperation(RosterOperations.AddRootEntryFromSymbol(RosterAddItems2[key].EntryLink, RosterAddItems2[key].ForceId));
                }
            }
        }

        return OnAddDone.InvokeAsync();
    }
    
    Task CloseMenu()
    {
        return OnAddDone.InvokeAsync(null);
    }
}


